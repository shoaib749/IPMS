<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".student_ui.Student_add_internship">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/curve_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.85"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_percent="0.95">

        <TextView
            android:id="@+id/add_internship_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/add_internships"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Company_Name_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="20dp"
            android:text="@string/company_name_Small"
            android:textColor="@color/black"
            android:textSize="@dimen/text_view_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_internship_TV" />

        <EditText
            android:id="@+id/Company_name_ET"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:autofillHints="Name"
            android:layout_marginTop="0dp"
            android:background="@drawable/name"
            android:inputType="textPersonName"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/edit_text_font_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.07"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Company_Name_TV" />

        <TextView
            android:id="@+id/Batch_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="16dp"
            android:text="@string/batch"
            android:textColor="@color/black"
            android:textSize="@dimen/text_view_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Company_name_ET" />

        <EditText
            android:id="@+id/Batch_ET"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autofillHints=""
            android:layout_marginTop="0dp"
            android:background="@drawable/name"
            android:inputType="textEmailAddress"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/edit_text_font_size"
            app:layout_constraintEnd_toEndOf="@+id/Company_name_ET"
            app:layout_constraintHeight_percent="0.07"
            app:layout_constraintStart_toStartOf="@+id/Company_name_ET"
            app:layout_constraintTop_toBottomOf="@+id/Batch_TV" />

        <TextView
            android:id="@+id/Start_date_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="16dp"
            android:text="@string/start_date"
            android:textColor="@color/black"
            android:textSize="@dimen/text_view_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Batch_ET" />

        <EditText
            android:id="@+id/Start_date_ET"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autofillHints=""
            android:background="@drawable/name"
            android:inputType="date"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:hint="@string/mm_dd_yyyy"
            android:drawableEnd="@drawable/ic_calendar_xml"
            android:textColorHint="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/edit_text_font_size"
            app:layout_constraintEnd_toEndOf="@+id/Batch_ET"
            app:layout_constraintHeight_percent="0.07"
            app:layout_constraintStart_toStartOf="@+id/Batch_ET"
            app:layout_constraintTop_toBottomOf="@+id/Start_date_TV" />

        <TextView
            android:id="@+id/End_Date_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="12dp"
            android:text="@string/end_date"
            android:textColor="@color/black"
            android:textSize="@dimen/text_view_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Start_date_ET" />

        <EditText
            android:id="@+id/End_Date_ET"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/name"
            android:inputType="date"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:hint="@string/mm_dd_yyyy"
            android:drawableEnd="@drawable/ic_calendar_xml"
            android:textColorHint="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/edit_text_font_size"
            app:layout_constraintEnd_toEndOf="@+id/Start_date_ET"
            app:layout_constraintHeight_percent="0.07"
            app:layout_constraintStart_toStartOf="@+id/Start_date_ET"
            app:layout_constraintTop_toBottomOf="@+id/End_Date_TV" />

        <Button
            android:id="@+id/B_add_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/curve_button"
            android:text="@string/add_details"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/End_Date_ET"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="@+id/End_Date_ET"
            app:layout_constraintTop_toBottomOf="@+id/End_Date_ET"
            app:layout_constraintVertical_bias="1.0" />


      </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

